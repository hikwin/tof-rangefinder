<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/brand_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/text_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tool_nfc_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="8dp"/>

        <ImageButton
            android:id="@+id/btnHelp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_help"
            app:tint="@color/text_primary" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Read Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/brand_surface"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfc_read_title"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/brand_primary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvNfcStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfc_status_waiting"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilReadContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nfc_read_content_hint"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_content_copy"
                        app:endIconContentDescription="@string/btn_copy"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etReadContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textIsSelectable="true"
                            android:textColor="@color/text_primary"
                            android:minLines="3"
                            android:gravity="top"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/btnClone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_clone"
                            android:enabled="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        <Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btnResetRead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_reset_read"
                            android:textColor="@color/error_color_material_light"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>

                        <Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvCloneStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/brand_primary"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- UID / Serial Number Section -->
                    <LinearLayout
                        android:id="@+id/layoutUidSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nfc_label_uid"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/brand_primary"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/tvTagUid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:fontFamily="monospace"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>
                                
                            <ImageButton
                                android:id="@+id/btnCopyUid"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_content_copy"
                                android:tint="@color/brand_primary"
                                android:scaleType="fitCenter"
                                android:padding="4dp"
                                android:contentDescription="@string/btn_copy"/>

                            <TextView
                                android:id="@+id/tvUidStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="@color/brand_primary"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnWriteUid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nfc_btn_write_uid"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Write Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/brand_surface"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nfc_write_title"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/brand_primary"/>

                            <TextView
                                android:id="@+id/tvWriteStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nfc_status_waiting_write"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <Spinner
                            android:id="@+id/spWriteType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:spinnerMode="dropdown"/>
                    </LinearLayout>

                    <!-- Text/URL/Phone Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nfc_write_hint"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etWriteContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:minLines="3"
                            android:gravity="top"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- WiFi Input -->
                    <LinearLayout
                        android:id="@+id/layoutWifiInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/nfc_hint_wifi_ssid"
                                android:layout_marginBottom="8dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etWifiSsid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:inputType="text"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                android:id="@+id/btnSavedWifi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nfc_btn_saved_wifi"
                                android:layout_marginStart="8dp"
                                android:minHeight="56dp"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                        </LinearLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nfc_hint_wifi_pass"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etWifiPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:inputType="textPassword"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- App Selection -->
                    <LinearLayout
                        android:id="@+id/layoutAppInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:background="@drawable/bg_glass_button"
                        android:backgroundTint="#0DFFFFFF">
                        
                        <TextView
                            android:id="@+id/tvSelectedApp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nfc_label_app"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp"/>
                            
                        <Button
                            android:id="@+id/btnSelectApp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nfc_btn_select_app"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>

                    <!-- Bluetooth Input -->
                    <LinearLayout
                        android:id="@+id/layoutBtInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nfc_hint_bt_mac"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etBtMac"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="17" 
                                android:inputType="textCapCharacters"/>
                                <!-- 17 chars for XX:XX:XX:XX:XX:XX -->
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Contact Input -->
                    <LinearLayout
                        android:id="@+id/layoutContactInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nfc_hint_contact_name"
                            android:layout_marginBottom="8dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etContactName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nfc_hint_contact_phone"
                            android:layout_marginBottom="8dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etContactPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nfc_hint_contact_email"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etContactEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Location Input -->
                    <LinearLayout
                        android:id="@+id/layoutLocInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                             <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/nfc_hint_loc_lat"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etLocLat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal|numberSigned"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

                             <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/nfc_hint_loc_lon"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etLocLon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal|numberSigned"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        
                        <Button
                            android:id="@+id/btnCurrentLoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nfc_btn_current_loc"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_gravity="end"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnWrite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfc_btn_write"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/brand_primary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfc_write_instruction"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/nfc_security_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tvSecurityStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nfc_status_waiting"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp"/>
                        
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/btnLock"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_lock_tag"
                            android:textSize="12sp"
                            android:backgroundTint="#FF5252"
                            android:textColor="@color/white"
                            android:layout_marginEnd="4dp"/>
                            
                        <Button
                            android:id="@+id/btnSetPwd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_set_pwd"
                            android:textSize="12sp"
                            android:layout_marginEnd="4dp"/>

                        <Button
                            android:id="@+id/btnRemovePwd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_remove_pwd"
                            android:backgroundTint="#4CAF50"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnCancelAction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfc_btn_cancel_action"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:textColor="@color/text_secondary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvGetAlipayRedPacket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nfc_btn_get_alipay_red_packet"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/brand_primary"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
