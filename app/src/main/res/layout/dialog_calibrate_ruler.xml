<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择校准参照物"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/rgCalibrateMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        
        <RadioButton
            android:id="@+id/rbCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标准卡片 (85.60mm)"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbRuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标准尺子 (50mm)" />
    </RadioGroup>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请滑动下方滑块，直到屏幕上的指示线与实物宽度完全一致。"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <View
        android:id="@+id/referenceLine"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#330000FF"
        android:layout_marginBottom="16dp"/> <!-- Will dynamically draw or resize -->

    <SeekBar
        android:id="@+id/seekBarCalibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2000"
        android:progress="1000" />
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="16dp">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            style="?attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存" />
    </LinearLayout>

</LinearLayout>
