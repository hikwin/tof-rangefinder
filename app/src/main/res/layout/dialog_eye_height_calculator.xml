<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eye_calc_desc"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eye_calc_gender_male"
                android:checked="true"
                android:layout_marginEnd="20dp"/>
            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eye_calc_gender_female"/>
        </RadioGroup>

        <EditText
            android:id="@+id/etPersonHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/eye_calc_height_hint"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/rgShoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <RadioButton
                android:id="@+id/rbShoeStd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eye_calc_shoe_std"
                android:checked="true"
                android:layout_marginEnd="12dp"/>
            <RadioButton
                android:id="@+id/rbShoeCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eye_calc_shoe_custom"/>
        </RadioGroup>

        <EditText
            android:id="@+id/etShoeHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/eye_calc_shoe_hint"
            android:inputType="numberDecimal"
            android:visibility="gone"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">
            
            <Button
                android:id="@+id/btnCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_calc" />
                
            <TextView
                android:id="@+id/tvCalcResult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text=""
                android:textColor="#AA0000"
                android:textStyle="bold"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
