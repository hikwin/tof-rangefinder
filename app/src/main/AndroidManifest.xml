<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-feature android:name="android.hardware.camera.any" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.sensor.proximity" android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_tof_app"
        android:roundIcon="@drawable/ic_tof_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tofchizi">
        
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity android:name=".ModeSelectActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Tofchizi.Dark"
            android:screenOrientation="portrait"/>
        <activity android:name=".HelpActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".HistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".ToolsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".RulerActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".CompassActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".AltitudeActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".ProtractorActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".LevelActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".FrameAlignmentActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".TwoStepMeasurementActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".LightningDistanceActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
    </application>
</manifest>